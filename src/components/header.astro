---
import { Image } from 'astro:assets'
import imageLogo from '../assets/imgs/logo.webp'
---

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.querySelector('.hamburger')
    const nav = document.querySelector('.containerRight')

    btn.addEventListener('click', () => {
      nav.classList.toggle('open')
    })
  })
</script>

<header class="header">
  <a class="containerLeft" id="containerLeft" href="/" aria-label="Ir a inicio">
    <Image src={imageLogo} alt="Logo de CompuAudio" loading="eager" />
  </a>
  <button class="hamburger" aria-label="Menú" aria-expanded="false"> ☰ </button>
  <nav class="containerRight" aria-label="Menú principal">
    <ul>
      <li>
        <a href="/">Inicio</a>
      </li>
      <li>
        <a href="/productos" class="products">Productos</a>
      </li>
      <li>
        <a href="/carrito" class="carrito"
          >Carrito</a
        >
      </li>
    </ul>
  </nav>
</header>

<style>
  .header {
    width: 100%;
    padding: 1rem 2rem;
    text-align: center;
    background-color: #f9f9f9;
    border-bottom: 1px solid #eaeaea;
    display: flex;
    justify-content: space-between;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.1);
  }

  .header .containerLeft {
    display: flex;
    align-items: center;
    border-radius: 10px;
    background-color: black;
  }

  .header .containerLeft img {
    width: auto;
    max-width: 80px;
    border-radius: 10px;
    box-sizing: border-box;
  }

  .header .containerLeft::after {
    content: 'CompuAudio Pereira';
    display: none;
    width: 0;
    background: #050505;
    font-size: 2rem;
    transition: width 0.4s ease;
    padding: 10px;
    overflow: hidden;
    white-space: nowrap;
  }

  .header .containerLeft:hover::after {
    width: 100%;
    display: block;
    color: #ffffff;
    animation: expandWidth 0.4s ease forwards;
  }

  @keyframes expandWidth {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  .hamburger {
    display: none;
    font-size: 2rem;
    background: none;
    border: none;
    cursor: pointer;
    color: #c55600;
  }

  .containerRight {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
  }

  .header .containerRight ul {
    display: flex;
    align-items: center;
    flex-direction: row;
    gap: 40px;
    font-size: 1.4rem;
    color: #000000;
  }

  .header .containerRight ul li {
    list-style: none;
  }

  .header .containerRight ul li a {
    text-decoration: none;
    color: #000000;
  }

  .header .containerRight ul li a:not(.carrito):after {
    content: '';
    display: block;
    width: 0;
    height: 2px;
    background: #c55600;
    transition: width 0.3s;
  }

  .header .containerRight ul li a:not(.carrito):hover::after {
    width: 100%;
    color: #c55600;
  }

  .header .containerRight ul li .carrito {
    color: #ffffff;
    padding: 0.5rem 2rem;
    background-color: #c55600;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .header .containerRight ul li .carrito:hover {
    background-color: #a84400;
  }


  @media (max-width: 868px) {
    .header {
      margin-inline: 1em;
      position: relative;
    }

    .hamburger {
      display: block;
    }

    .containerRight {
      flex-direction: column;
      justify-content: flex-start;
      position: absolute;
      top: 100%;
      left: 0;
      width: 100%;
      background-color: #f9f9f9;
      padding: 0 1rem;
      overflow: hidden;
      max-height: 0;
      opacity: 0;
      transform: translateY(-10px);
      transition:
        max-height 0.4s ease,
        opacity 0.4s ease,
        transform 0.4s ease;
      z-index: 9998;
    }

    .containerRight.open {
      max-height: 300px; /* ajusta según contenido */
      opacity: 1;
      transform: translateY(0);
      padding: 1rem;
    }

    .containerRight ul {
      flex-direction: column !important;
      gap: 15px !important;
      width: 100%;
      font-size: 1.2rem;
    }

    .containerRight ul li a {
      padding: 0.5rem 1rem;
      width: 100%;
    }

    .header .containerRight ul li a:not(.carrito):after {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .header {
      margin-inline: 1em;
      position: relative;
    }

    .hamburger {
      display: block;
    }

    .header .containerLeft::after {
      display: none !important;
    }

    .containerRight {
      flex-direction: column;
      justify-content: flex-start;
      position: absolute;
      top: 100%;
      left: 0;
      width: 100%;
      background-color: #f9f9f9;
      padding: 0 1rem;
      overflow: hidden;
      max-height: 0;
      opacity: 0;
      transform: translateY(-10px);
      transition:
        max-height 0.4s ease,
        opacity 0.4s ease,
        transform 0.4s ease;
      z-index: 9998;
    }

    .containerRight.open {
      max-height: 300px; /* ajusta según contenido */
      opacity: 1;
      transform: translateY(0);
      padding: 1rem;
    }

    .containerRight ul {
      flex-direction: column !important;
      gap: 15px !important;
      width: 100%;
      font-size: 1.2rem;
    }

    .containerRight ul li a {
      padding: 0.5rem 1rem;
      width: 100%;
    }

    .header .containerRight ul li a:not(.carrito):after {
      display: none;
    }
  }
</style>
