---
import { Image } from 'astro:assets'
import imageLogo from '../assets/imgs/logo.webp'
---

<header class="header">
  <a class="containerLeft" id="containerLeft" href="/" aria-label="Ir a inicio">
    <Image src={imageLogo} alt="Logo de CompuAudio" loading="eager" />
    <!-- <p class="siteName" id="siteName" aria-label="Nombre de la empresa">
      Compu<span>Audio Pereira</span>
    </p> -->
  </a>
  <nav class="containerRight" aria-label="MenÃº principal">
    <ul>
      <li>
        <a href="/">Inicio</a>
      </li>
      <li>
        <a href="/contact">Contacto</a>
      </li>
      <li>
        <a href="/products" class="products">Productos</a>
      </li>
    </ul>
  </nav>
</header>

<style>
  .header {
    text-align: center;
    background-color: #f9f9f9;
    padding: 1rem;
    border-bottom: 1px solid #eaeaea;
    display: flex;
    justify-content: space-between;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.1);
    margin-inline: 3em;
  }

  .header .containerLeft {
    display: flex;
    align-items: center;
    /* box-shadow: 6px 7px 4px 0px rgb(0 0 0 / 32%); */
    border-radius: 10px;
    background-color: black;
  }

  .header .containerLeft img {
    width: auto;
    max-width: 80px;
    border-radius: 10px;
    box-sizing: border-box;
  }

  .header .containerLeft::after {
    content: 'CompuAudio Pereira';
    display: none;
    width: 0;
    background: #050505;
    font-size: 2rem;
    transition: width 0.4s ease;
    padding: 10px;
    overflow: hidden;
    white-space: nowrap;
  }

  .header .containerLeft:hover::after {
    width: 100%;
    display: block;
    color: #ffffff;
    animation: expandWidth 0.4s ease forwards;
  }

  @keyframes expandWidth {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  /* .header .containerLeft p {
  font-size: 2.5rem;
  font-weight: 700;
  color: #c55600;
