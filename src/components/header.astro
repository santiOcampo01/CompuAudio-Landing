.header .containerLeft span {
  color: #ffffff;
  padding-right: 20px;
} */

  .containerRight {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
  }

  .header .containerRight ul {
    display: flex;
    align-items: center;
    flex-direction: row;
    gap: 40px;
    font-size: 1.4rem;
    color: #000000;
  }

  .header .containerRight ul li {
    list-style: none;
  }

  .header .containerRight ul li a {
    text-decoration: none;
    color: #000000;
  }

  .header .containerRight ul li a:not(.products):after {
    content: '';
    display: block;
    width: 0;
    height: 2px;
    background: #c55600;
    transition: width 0.3s;
  }

  .header .containerRight ul li a:not(.products):hover::after {
    width: 100%;
    color: #c55600;
  }

  .header .containerRight ul li .products {
    background-color: #c55600;
    color: #ffffff;
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .header .containerRight ul li .products:hover {
    background-color: #c55500c5;
    color: #ffffff;
  }

