---
import Layout from '../layouts/Layout.astro'
import Header from '../components/header.astro'
import { getCollection } from 'astro:content'
const productos = await getCollection('products')
const catalogo = productos.map(p => ({
  slug: p.slug,
  nombre: p.data.title,
  precio: p.data.price,
  imagen: p.data.image,
}))
---

<Layout title="Carrito de Compras">
  <Header />

  <section id="carrito">
    <h2>Carrito</h2>
    <ul id="lista-carrito"></ul>

    <div id="total-carrito" class="total-carrito">
      Total: <span id="valor-total">$0</span>
    </div>

    <button id="boton-whatsapp" onclick="enviarPorWhatsApp()">Enviar pedido por WhatsApp</button>
  </section>

  <script type="module" set:html={`window.catalogo = ${JSON.stringify(catalogo).replace(/</g, '\\u003c')};`} />
  <script type="module" src="/js/cart.js"></script>
</Layout>

<style is:global>
  #lista-carrito {
    padding: 0;
    list-style: none;
  }

  .item-carrito {
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 10px;
    margin-bottom: 1rem;
    padding: 1rem;
  }

  .contenedor-producto {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .img-producto {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 6px;
    border: 1px solid #ccc;
  }

  .detalles-producto {
    flex: 1;
  }

  .detalles-producto h4 {
    margin: 0 0 0.25rem 0;
    font-size: 1rem;
  }

  .cantidad-precio {
    margin: 0 0 0.5rem;
    font-size: 0.95rem;
    color: #333;
  }

  .precio {
    font-weight: bold;
    color: #1a8917;
  }

  .acciones {
    display: flex;
    gap: 0.5rem;
  }

  .acciones button {
    background-color: #f60;
    color: white;
    border: none;
    padding: 0.3rem 0.6rem;
    font-size: 0.85rem;
    border-radius: 4px;
    cursor: pointer;
  }

  .acciones button:hover {
    background-color: #e65c00;
  }

  .total-carrito {
    text-align: right;
    font-weight: bold;
    font-size: 1.2rem;
    margin-top: 1rem;
  }

  #boton-whatsapp {
    background-color: #25d366;
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    border-radius: 6px;
    cursor: pointer;
    display: block;
    margin: 2rem auto 0;
    transition: background-color 0.2s ease;
  }

  #boton-whatsapp:hover {
    background-color: #1ebe57;
  }
</style>
